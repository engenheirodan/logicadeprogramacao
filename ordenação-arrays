//começa a ordenação de array onde nesse caso ele percorre cada array e na sequencia executa a função de ordenação com o metodo sort

const cars = [
      { brand: 'Fiat', year: 2022 },
      { brand: 'BMW', year: 2018 },
      { brand: 'Ferrari', year: 2020 }
]
cars.sort((a, b) => b.year - a.year);

console.log(cars);

//para saber se existe algum indice no array no caso o exemplo usado foi uma laranja

let frutas = ["Banana","Laranja","Maça","pera"]
if(frutas.includes(frut = "Laranja")){
    console.log(`Tem: ${frut} Sim`)

}else{
    console.log(`Não tem: ${frut}`)
}


